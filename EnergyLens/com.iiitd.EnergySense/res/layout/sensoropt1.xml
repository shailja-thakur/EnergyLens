<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <TableLayout android:layout_height="wrap_content"
		android:stretchColumns="*" android:layout_width="match_parent"
		android:padding="3dp" android:id="@+id/tableLayout1">     


    <TableRow android:id="@+id/tableRow1" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<LinearLayout android:id="@+id/aboutLayout"
				android:layout_height="wrap_content" android:layout_width="match_parent"
				android:orientation="horizontal">
				
			 <TextView
			     android:id="@+id/textViewCategoriesTitle"
			     android:layout_width="wrap_content"
			     android:layout_height="wrap_content"
			     
			     android:background="#FF8000"
			     android:text="@string/settings"
			     android:textColor="#fffacd"
			     android:textSize="35sp" />
								
								<ImageButton
            android:id="@+id/btn1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            
            android:background="#FF8000"
            android:src="@drawable/setting2" />
			</LinearLayout>

			
			
			
			
		</TableRow>
		
    
    </TableLayout>
    
    
    <GridView 
    	android:layout_height="wrap_content" 
    	android:id="@+id/gridView1" 
    	android:layout_width="match_parent" 
    	android:numColumns="auto_fit"
    	android:horizontalSpacing="10dp"
    	android:verticalSpacing="10dp">
    </GridView>
</LinearLayout>
